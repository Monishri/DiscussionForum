package com.rootquotient.questionanswer.controller;

import java.util.Collection;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.cognizant.medicaresystem.service.UserService;
import com.rootquotient.questionanswer.model.Doctor;
import com.rootquotient.questionanswer.model.MediCare;
import com.rootquotient.questionanswer.model.Patient;

@RestController
@RequestMapping("/admin")
public class AdminController {

@Autowired
UserService userService;
	
		@GetMapping("/allPatients")
		public Collection<Patient> getAllPatientList(){
			return userService.getAllPatients();
		}
		@GetMapping("/allDoctors")
		public Collection<Doctor> getAllDoctorList(){
			return userService.getAllDoctors();
		}
		
		@PostMapping("/modifyservice")
		public void editMediService(@RequestBody MediCare medicare) {
			userService.modifyService(medicare);
		} 
		
		@DeleteMapping("/removedoctor/{id}")
		public void removeDoctorById(@PathVariable("id")  Integer id) {
			userService.removeDoctorDetailsById(id);
		} 
	
	}

